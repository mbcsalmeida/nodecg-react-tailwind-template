{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "types": [],
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": false, // TODO: enable this
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "speedcontrol/*": ["../../bundles/nodecg-speedcontrol/*"],
      "@nodecg-react-tailwind-template/*": ["src/*", "src/graphics/*", "src/dashboard/*"],
      "@nodecg-react-tailwind-template/types": ["src/types"],
      "@nodecg-react-tailwind-template/types/*": ["src/types/*"]
    }
  }
}
